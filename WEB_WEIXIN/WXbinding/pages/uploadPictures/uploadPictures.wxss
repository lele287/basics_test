/* pages/uploadPictures/uploadPictures.wxss */

.picture{
  width:100rpx;
  height:68rpx;
  margin:10rpx auto;
}
page {
  background-color: #f6f7f8;
}

.question-form {
  margin: 25rpx;
}

.question-input-area {
  background-color: #fff;
  border: 1rpx solid #f2f2f2;
  border-radius: 4rpx;
}

.question-title-wrap {
  display: flex;
  color: #b3b3b3;
  font-size: 14px;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  margin: 10rpx 30rpx;
  padding: 20rpx 0;
}

.question-title {
  flex: 1;
}

.weui-textarea-counter, .title-input-counter {
  color: #b3b3b3;
  font-size: 14px;
  padding-left: 10rpx;
  width: 50rpx;
}
.weui-cell{
  margin:0 10px 10px 10px;
}
.weui-textarea{
  width: auto;
}

.weui-cell::before, .weui-cells::before, .weui-cell::after, .weui-cells::after {
  border: none;
}

.question-images-area {
  /*padding: 40rpx 0;*/
}

.question-images-tool {
  /*display: flex;*/
  margin-bottom:10px;
  align-items: center;

}
.question-images-tool button{

}
.question-images {
  display: flex;
  justify-content:space-around;
  flex-flow:wrap;
}

.q-image-wrap {
  width: 30%;
  position: relative;
  /*margin-right: 10rpx;*/
  margin-bottom:15px;
}

.q-image {
  flex: 1;
  height: 200rpx;
  width: 100%;
}

.q-image-remover {
  text-align:center;
  font-size:12px;
  border:1px solid #000;
  width:18px;
  border-radius:50px;
  margin:0 auto;
  position:absolute;
  left:-5px;
  top:-5px;
  z-index:1;
  height:18px;
  color:#000;
  background:#fff;
}
.weui-btn{
  margin-top: 15px;
}
