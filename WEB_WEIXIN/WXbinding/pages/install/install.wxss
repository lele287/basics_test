}
.switch{
  /*margin-top:10rpx;*/
  display:flex;
  padding: 0 15px;
  flex-flow: wrap;
  justify-content: flex-start;
  margin-bottom:10px;
  margin-top:30rpx;
}
.destribute{
  /*height:2rem;*/
  /*line-height:2rem;*/
  /*margin-left:50rpx;*/
  /*font-weight:600;*/
  font-size: 16px;
  color: #000;
  margin-bottom:20rpx;
}
.destributeTitle{
  font-size: 28rpx;
  line-height: 58rpx;
  margin-right: 20rpx;
  margin-left: 30rpx;
}
.content-switch{
  /*margin-left:50%;*/
  /*margin-left: 60rpx;*/

}
.wx-switch-input{
  width:80rpx !important;
  height:32rpx !important;
  background: #60adff !important;
  border: #60adff !important; /*重置开关边框颜色 */
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
  width:83rpx !important;
  height: 32rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
  width: 40rpx !important;
  height: 32rpx !important;
}
.input{
  /*width:400rpx;*/
  margin:0 auto 0 60rpx;
  display: flex;
  flex-flow: wrap;
  justify-content:flex-start;
}
.input-view{
  border-bottom:1rpx solid #f5f5f5;
  display:block;
  width:360rpx;
  font-size: 28rpx;
}
.insert{
  height:80rpx;
  width:90%;
  margin:50rpx auto;
  text-align:center;
  line-height:80rpx;
  border-radius:10rpx;
  background-color:#2d68f4;
  color:#fff;
  font-size: 14px;
}
.euipment-list{
  height: 30vh;
  width:90%;
  border:1rpx solid #60adff;
  border-radius:10rpx;
  margin:2rpx auto;
  position: relative;
}
.noData{
  width:100px;
  height:100px;
}
.no-data{
  position:absolute;
  left:50%;
  top:50%;
  transform:translate(-50%,-50%);
}
.equipment-info{
  margin-left: 20rpx;
  margin-top:20rpx;
  display:flex;
  height:20rpx;
  line-height: 20rpx;
  font-size:32rpx;
  display:flex;
  justify-content:space-around;
}
.delete{
  margin-left:20rpx;
}

