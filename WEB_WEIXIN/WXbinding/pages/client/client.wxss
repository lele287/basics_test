.client_info{
  width:48%;
  /* flex-grow:0.5; */
  height:150rpx;
  background-color:#fff;
  border-radius:10rpx;
  box-shadow:0px 0px 5px #d7d6d6;
  overflow:hidden;
  position: relative;
  margin-top: 15rpx;
}
.client-name{
  font-size: 32rpx;
  color: #000000;
  margin:20rpx 0 0 20rpx;
  font-weight: bold;

}
.client{
  width:80rpx;
  height:80rpx;
  position: absolute;
  right: 30rpx;
  bottom:20prx;
}
.client image{
  width: 100%;
  height:100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.swiper {
  height:335rpx;
  width: 100%;
}
.my-client{
  line-height:40rpx;
  height:40rpx;
  color:#000000;
  font-size:32rpx;
  float:left;
  margin-bottom: 20rpx;
}
.titleWrap{
  margin-top:30rpx;
}
.titleBg{
  width:8rpx;
  height:40rpx;
  float: left;
  margin:0 10rpx 0 16rpx;
  background-color: #3e8ffa;
}
.indexBanner{
  width:90%;
  height:295rpx;
  margin:30rpx auto 30rpx;
}
.indexBanner image{
  width:100%;
  height:100%;
}
.btFz{
  width:100%;
  height:80rpx;
  background-color:#ffffff;
  position:fixed;
  bottom:0;
  left:50%;
  margin-left:-45%;
  padding:20rpx 0;
}
.button{
  width: 90%;
  height:80rpx;
  font-size:14px;
  background-color: #2d68f4!important;
  color: #fff;
  border: 0;
  border-radius:8rpx;
  line-height:80rpx;
  text-align: center;
}
.font{
  position: relative;
  font-weight: 700;   
}