/* pages/login/login.wxss */
page{
  height: 100%;
}
 
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #ffffff;
} 
 
/*登录图片*/
.login-icon{
  width:200rpx;
  height: 200rpx;
  margin: 50rpx auto 0;
  border-radius: 50%;
}
.login-img{
  width: 100%;
  height: 100%;
}
 
/*表单内容*/
.login-from {
  margin-top: 20px;
  flex: auto;
  height:100%;
}
 
.inputView {
  background-color: #fff;
  overflow: hidden;
  border-radius:5px;
  width:80%;
  height:35px;
  margin:10px auto;
  border:1rpx solid #b1b1b1;
}
/*输入框*/
.nameImage, .keyImage {
  margin-left: 22px;
  width: 14px;
  height: 14px;
  float: left;
}
 
.loginLab {
  margin-right:10px;
  color: #545454;
  line-height:35px;
  font-size: 14px;
  float: left;
}
.inputText {
  flex: block;
  float: left;
  display: inline-block;
  color: #b3b3b3;
  height: 35px;
  font-size: 14px;
}
.placeholder{
  color: #b3b3b3;
}
.line {
  /*width: 100%;*/
  /*height: 1px;*/
  /*background-color: #b3b3b3;*/
}
/*按钮*/
.loginBtnView {
  width: 100%;
  height: auto;
  /*background-color: #f2f2f2;*/
  margin-top: 0px auto;
  padding-bottom: 0px;
}
 
.loginBtn {
  width: 80%;
  font-size:14px;
  background-color: #2d68f4!important;
  color: #fff;
  border: 0;
  margin-top: 35px;
}
