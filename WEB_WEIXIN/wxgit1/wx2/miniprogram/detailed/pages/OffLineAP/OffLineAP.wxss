.van-dropdown-menu__item{
  width: 330rpx;
}
.van-dropdown-menu__item>view{
  margin-left: -30rpx;
}
.ResetBtn{
  display: flex;
  align-items: center;
}
.regionLeft{
  margin-left: 30rpx;
}
.queryButton{
  margin-top: -8rpx;
  }
.dropDown{
  width: 432rpx;
  font-size: 28rpx;
  text-align: center;
  padding: 20rpx 30rpx;
  border: 1px solid #f4f4f4;
  box-shadow: 5px 5px 10px rgba(0,17,41,0.1);
  margin-left: 12rpx;
}
.dropDownIcon{
  width: 30rpx;
  height: 30rpx;
}
.Exhibition{
  position: absolute;
  left: 10rpx;
  right: 10rpx;
  background-color: #fff;
  border: 1px solid #f4f4f4;
  box-shadow: 5px 5px 10px rgba(0,17,41,0.1);
}
.Exhibition_container{
  margin: 20rpx 30rpx;
  display: flex;
  flex-wrap: wrap;
}
.Exhibition_margin{
  margin: 10rpx 20rpx;
}

  
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #fff;
  /* background-color: #87cefa; */
  /* color: #fff; */
}
.th {
  width: 15%;
  font-size: 30rpx;
  text-align: left;
  margin: 22rpx 0;
}
/* .th:nth-child(1){
  margin-left: 10rpx;
} */

.td {
  width: 15%;
  font-size: 26rpx;
  text-align: left;
  padding: 22rpx 6rpx;
}

.td:nth-child(1),.th:nth-child(1){
  width:17%;
  padding-left: 10rpx;
}
.td:nth-child(2),.th:nth-child(2){
  width:30%;
}
/* .td:nth-child(3),.th:nth-child(3){
  width:28%;
} */
.td:nth-child(3),.th:nth-child(3){
  width:43%;
}
.td:nth-child(4),.th:nth-child(4){
  width:10%;
}
.bg-w {
  background: #87cefa;
  color: #fff;
  box-shadow: 0px 5px 20px rgba(0,17,41,0.1);
}

.blue{
  background-color: #40E0D0;
  /* background-color: #0ff; */
}
.red{
  background-color: #FFB6C1;
}



