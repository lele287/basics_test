.head{
  display: flex;
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 16rpx;
  /* margin-bottom: 20rpx; */
  background-color: #fff;
  padding-bottom: 20rpx;
}
.state{
  display: flex;
  align-items: center;
}
.textSize{
  width: 60rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: center;
}
.onLine{
  margin-right: 6rpx;
  background-color: #40E0D0;
  border: 4rpx solid #eee;
}

.offLine{
  background-color: #FFB6C1;
  border: 4rpx solid #eee;
}

.status{
  border-color: #1890ff!important;
}
