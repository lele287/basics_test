
/* 课程 */
.imgNetop{
  width: 100%;
  height: 350rpx;
}
.Carousel{
  margin: 30rpx 0;
}
.CarouselImg{
  width: 100%;
  height: 100%;
  border: 1px solid #eee;
  border-radius: 15rpx;
}
.specialColumn{
  font-size: 34rpx;
  font-weight: 700;
  margin: 40rpx 0 -10rpx 0;
}
.column{
  display: flex;
  margin: 20rpx 0;
  line-height: 40rpx;
}
.inform{
  margin-left: 30rpx;
}
.inform>view{
  margin: 0;
  margin-bottom: 12rpx;
}
.informationImg{
  width: 160rpx;
  height: 220rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
}
.informTrainer_name,.informTrainer_position{
  color: #bcbdbe;
  height: 40rpx;
  padding: 0 15rpx;
  background-color: #f7f8fa;
  border: 1px solid #f7f8fa;
  border-radius: 10rpx;
}
.informTrainer_position{
  margin: 0 20rpx;
}
.informTit{
  font-size: 32rpx;
  font-weight: 800;
  line-height: 50rpx;
}
.informText{
  font-size: 28rpx;
  margin-bottom: 6rpx;
}
.informTrainer{
  font-size: 24rpx;
  display: flex;
}
.informCurriculum{
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
}
.informCurriculum_border{
  color: #ff7453;
  border: 1px solid #f3bdb0;
  border-radius: 10rpx;
  padding: 0 10rpx;
}
.informCurriculum_shelves{
  color: #afafaf;
  font-size: 20rpx;
}
.informCurriculum_remind{
  padding: 4rpx 10rpx;
  /* height: 50rpx;
  line-height: 50rpx; */
  /* font-weight: 600; */
  background-color: #0fcbf8;
  border: 1px solid #0fcbf8;
  border-radius: 10rpx;
}